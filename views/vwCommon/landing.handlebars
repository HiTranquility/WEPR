{{#fill_section 'css'}}
<link rel="stylesheet" href="/static/css/landing.css">
{{/fill_section}}

<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-indicators">
    {{#each featuredCourses}}
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="{{@index}}"
            class="{{#if @first}}active{{/if}}"></button>
    {{/each}}
  </div>

  <div class="carousel-inner">
    {{#each featuredCourses}}
    <div class="carousel-item {{#if @first}}active{{/if}}">
      <img src="{{thumbnail_url}}" class="d-block w-100" alt="{{title}}">
      <div class="carousel-caption d-md-block">
        <h3>{{title}}</h3>
        <p>{{short_description}}</p>
        <div class="d-flex justify-content-center gap-3 align-items-center mb-3">
          <div class="rating-stars">
            ⭐ {{rating_avg}} ({{formatNumber rating_count}} đánh giá)
          </div>
          <div class="text-white">
            <i class="bi bi-people-fill"></i> {{formatNumber enrollment_count}} học viên
          </div>
        </div>
        <div class="d-flex justify-content-center gap-2 mb-3">
          <span class="price-current text-white fs-3 fw-bold">{{formatCurrency discount_price}}</span>
          <span class="price-original text-white-50 fs-5">{{formatCurrency price}}</span>
          <span class="discount-badge">-{{calculateDiscount price discount_price}}%</span>
        </div>
        <a href="/courses/{{id}}" class="btn btn-primary btn-lg">Xem chi tiết</a>
      </div>
    </div>
    {{/each}}
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

<section class="stats-section">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-number">10,000+</div>
          <div class="stat-label">Học viên</div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-number">500+</div>
          <div class="stat-label">Khóa học</div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-number">100+</div>
          <div class="stat-label">Giảng viên</div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-number">4.8/5</div>
          <div class="stat-label">Đánh giá</div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="section-title">Lĩnh vực phổ biến trong tuần</h2>
      <p class="section-subtitle">Các lĩnh vực được đăng ký nhiều nhất</p>
    </div>
    <div class="row g-4">
      {{#each topCategories}}
      <div class="col-md-4 col-sm-6">
        <div class="category-card">
          <div class="category-icon">
            <i class="bi bi-book"></i>
          </div>
          <div class="category-name">{{name}}</div>
          <div class="category-count">{{enrollment_count}} đăng ký mới | {{course_count}} khóa học</div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="section-title">Khóa học được xem nhiều nhất</h2>
      <p class="section-subtitle">Những khóa học đang được quan tâm nhất</p>
    </div>
    <div class="row g-4">
      {{#each mostViewedCourses}}
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card course-card">
          <div class="position-relative">
            <img src="{{thumbnail_url}}" class="course-image" alt="{{title}}">
            {{#if (isBestSeller enrollment_count)}}
            <span class="course-badge bestseller">Best Seller</span>
            {{/if}}
          </div>
          <div class="course-body">
            <div class="course-category">{{category.name}}</div>
            <h5 class="course-title">{{truncate title 60}}</h5>
            <div class="course-teacher">
              <img src="{{teacher.avatar_url}}" class="teacher-avatar" alt="{{teacher.full_name}}">
              {{teacher.full_name}}
            </div>
            <div class="course-rating">
              <span class="rating-stars">⭐ {{rating_avg}}</span>
              <span class="rating-text">({{formatNumber rating_count}})</span>
              <span class="rating-text">• {{formatNumber enrollment_count}} học viên</span>
            </div>
            <div class="course-footer">
              <div class="course-price">
                <span class="price-current">{{formatCurrency discount_price}}</span>
                {{#if (gt price discount_price)}}
                <span class="price-original">{{formatCurrency price}}</span>
                {{/if}}
              </div>
              {{#if (gt price discount_price)}}
              <span class="discount-badge">-{{calculateDiscount price discount_price}}%</span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="section-title">Khóa học mới nhất</h2>
      <p class="section-subtitle">Khám phá những khóa học vừa được ra mắt</p>
    </div>
    <div class="row g-4">
      {{#each newestCourses}}
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card course-card">
          <div class="position-relative">
            <img src="{{thumbnail_url}}" class="course-image" alt="{{title}}">
            {{#if (isNew created_at)}}
            <span class="course-badge">Mới</span>
            {{/if}}
          </div>
          <div class="course-body">
            <div class="course-category">{{category.name}}</div>
            <h5 class="course-title">{{truncate title 60}}</h5>
            <div class="course-teacher">
              <img src="{{teacher.avatar_url}}" class="teacher-avatar" alt="{{teacher.full_name}}">
              {{teacher.full_name}}
            </div>
            <div class="course-rating">
              <span class="rating-stars">⭐ {{rating_avg}}</span>
              <span class="rating-text">({{formatNumber rating_count}})</span>
              <span class="rating-text">• {{formatNumber view_count}} lượt xem</span>
            </div>
            <div class="course-footer">
              <div class="course-price">
                <span class="price-current">{{formatCurrency discount_price}}</span>
                {{#if (gt price discount_price)}}
                <span class="price-original">{{formatCurrency price}}</span>
                {{/if}}
              </div>
              {{#if (gt price discount_price)}}
              <span class="discount-badge">-{{calculateDiscount price discount_price}}%</span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{#fill_section 'js'}}
{{/fill_section}}
