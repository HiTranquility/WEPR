<div class="auth-container">
    <div class="auth-header">
      <h1>Forgot Password?</h1>
      <p>We'll send you a reset link</p>
    </div>

    <div class="auth-body">
      <div id="alertMessage" class="alert alert-danger hidden"></div>

      <div class="info-text">
        Enter your email address and we'll send you a link to reset your password.
      </div>

      <form id="forgotForm" action="/auth/forgot" method="POST" novalidate>
        <div class="form-group">
          <label class="form-label" for="email">Email Address</label>
          <input type="email" class="form-control" id="email" required placeholder="you@example.com" name="email">
          <div class="error-message" id="emailError">Please enter a valid email</div>
        </div>

        <button type="submit" class="btn-primary" id="submitBtn">Reset Password</button>
      </form>
    </div>

    <div class="auth-footer">
      Remember your password? <a href="/signin">Sign In</a>
    </div>
  </div>

  <script>
    const form = document.getElementById('forgotForm');
    const emailInput = document.getElementById('email');
    const submitBtn = document.getElementById('submitBtn');
    const alertMessage = document.getElementById('alertMessage');

    function showError(input, errorElement) {
      input.classList.add('error');
      errorElement.classList.add('show');
    }

    function hideError(input, errorElement) {
      input.classList.remove('error');
      errorElement.classList.remove('show');
    }

    function validateEmail(email) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }

    function showAlert(type, message) {
      alertMessage.className = `alert alert-${type}`;
      alertMessage.textContent = message;
      alertMessage.classList.remove('hidden');
    }

    function resetButton() {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Reset Password';
    }

    const endpoint = form.getAttribute('action') || '/auth/forgot';

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      alertMessage.classList.add('hidden');

      const email = emailInput.value.trim();

      if (!validateEmail(email)) {
        showError(emailInput, document.getElementById('emailError'));
        return;
      }

      hideError(emailInput, document.getElementById('emailError'));

      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending reset link...';

      try {
        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });

        const data = await res.json();

        if (!res.ok) {
          showAlert('danger', data.message || 'Không thể gửi yêu cầu. Vui lòng thử lại.');
          resetButton();
          return;
        }

        showAlert('success', data.message || 'Nếu email tồn tại, chúng tôi đã gửi liên kết đặt lại mật khẩu.');
        form.reset();
        resetButton();
      } catch (error) {
        console.error('Forgot password error:', error);
        showAlert('danger', 'Đã xảy ra lỗi. Vui lòng thử lại.');
        resetButton();
      }
    });
  </script>
