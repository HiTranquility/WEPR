<div class="auth-container">
  <div class="auth-header">
    <h1>Reset Password</h1>
    <p>Set a new password for your account</p>
  </div>

  <div class="auth-body">
    <form id="resetForm" method="POST" action="/reset" novalidate>
      <div class="form-group">
        <label class="form-label" for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="{{email}}" required>
      </div>

      <div class="form-group">
        <label class="form-label" for="otp">OTP</label>
        <input type="text" class="form-control" id="otp" name="otp" required placeholder="6-digit code">
      </div>

      <div class="form-group">
        <label class="form-label" for="password">New Password</label>
        <input type="password" class="form-control" id="password" name="password" required minlength="6">
      </div>

      <div class="form-group">
        <label class="form-label" for="confirmPassword">Confirm New Password</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
      </div>

      {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      <button type="submit" class="btn-primary" id="submitBtn">Update Password</button>
    </form>
  </div>

  <div class="auth-footer">
    <a href="/signin">Back to Sign In</a>
  </div>
</div>

{{#fill_section 'js'}}
<script>
  const form = document.getElementById('resetForm');
  form.addEventListener('submit', function (e) {
    const pw = document.getElementById('password').value;
    const cpw = document.getElementById('confirmPassword').value;
    if (pw.length < 6) {
      e.preventDefault();
      alert('Password must be at least 6 characters');
      return false;
    }
    if (pw !== cpw) {
      e.preventDefault();
      alert('Passwords do not match');
      return false;
    }
  });
</script>
{{/fill_section}}
