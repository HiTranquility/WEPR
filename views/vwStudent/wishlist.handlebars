{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/student/student-watchlist.css">
{{/fill_section}}

<section class="profile-header">
  <div class="container">
    <div class="d-flex align-items-center gap-3">
      <img src="{{user.avatar_url}}" class="profile-avatar" alt="{{user.full_name}}">
      <div>
        <h2 class="mb-1">{{user.full_name}}</h2>
        <p class="mb-0 opacity-75">{{user.email}}</p>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-lg-3">
        <div class="profile-sidebar">
          <ul class="sidebar-nav">
            <li class="sidebar-nav-item">
              <a href="/student/profile" class="sidebar-nav-link">
                <i class="bi bi-person"></i>
                <span>Thông tin cá nhân</span>
              </a>
            </li>
            <li class="sidebar-nav-item">
              <a href="/student/my-courses" class="sidebar-nav-link">
                <i class="bi bi-book"></i>
                <span>Khóa học của tôi</span>
              </a>
            </li>
            <li class="sidebar-nav-item">
              <a href="/student/wishlist" class="sidebar-nav-link active">
                <i class="bi bi-heart"></i>
                <span>Danh sách yêu thích</span>
              </a>
            </li>
            <li class="sidebar-nav-item">
              <a href="/reset" class="sidebar-nav-link">
                <i class="bi bi-lock"></i>
                <span>Đổi mật khẩu</span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="col-lg-9">
        <div class="profile-content">
          <h4 class="mb-4">Danh sách yêu thích ({{wishlist.length}})</h4>

          {{#if wishlist.length}}
          <div class="wishlist-container">
            {{#each wishlist}}
            <div class="course-card-horizontal">
              <img src="{{course.thumbnail_url}}" class="course-card-thumbnail" alt="{{course.title}}">
              <div class="course-card-content">
                <div class="d-flex justify-content-between">
                  <div>
                    <span class="badge bg-primary mb-2">{{course.category.name}}</span>
                    <h5>{{course.title}}</h5>
                    <p class="text-muted mb-2">{{course.teacher.full_name}}</p>
                    <div class="d-flex align-items-center gap-3 mb-2">
                      <span class="text-warning">⭐ {{course.rating_avg}}</span>
                      <span class="text-muted">({{formatNumber course.rating_count}})</span>
                      <span class="text-muted">{{formatNumber course.enrollment_count}} học viên</span>
                    </div>
                  </div>
                  <div class="text-end">
                    <div class="mb-2">
                      {{#if course.has_discount}}
                        <div class="fs-4 fw-bold text-primary">{{formatCurrency course.discount_price}}</div>
                        <div class="text-muted text-decoration-line-through small">{{formatCurrency course.price}}</div>
                      {{else}}
                        <div class="fs-4 fw-bold text-primary">{{formatCurrency course.final_price}}</div>
                      {{/if}}
                    </div>
                    <button class="btn btn-sm btn-danger" onclick="removeFromWatchlist('{{course.id}}')">
                      <i class="bi bi-trash"></i> Xóa
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="empty-state">
            <i class="bi bi-heart"></i>
            <h5>Chưa có khóa học yêu thích</h5>
            <p>Bạn chưa thêm khóa học nào vào danh sách yêu thích</p>
            <a href="/" class="btn btn-primary">Khám phá khóa học</a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>

{{#fill_section 'js'}}
<script type="module">
  async function handleResponse(res) {
    let data = null;
    const contentType = res.headers.get('content-type') || '';
    if (contentType.includes('application/json')) {
      try {
        data = await res.json();
      } catch (err) {
        console.error('handleResponse json parse error', err);
      }
    }

    if (!res.ok || data?.success === false) {
      alert(data?.message || 'Có lỗi xảy ra.');
      return null;
    }
    return data || { success: true };
  }

  window.removeFromWatchlist = async (courseId) => {
    if (!courseId) return;
    if (!confirm('Bạn có chắc muốn xóa khóa học này khỏi danh sách yêu thích?')) {
      return;
    }
    try {
      const res = await fetch(`/courses/${courseId}/wishlist`, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include'
      });
      const data = await handleResponse(res);
      if (!data) return;
      window.location.reload();
    } catch (err) {
      console.error(err);
      alert('Có lỗi xảy ra.');
    }
  };
</script>
{{/fill_section}}
