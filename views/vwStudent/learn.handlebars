<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{currentLecture.title}} - {{course.title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css">
    <link rel="stylesheet" href="/statics/css/student/learn.css">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/student/my-courses">
        <i class="bi bi-arrow-left"></i> Quay lại khóa học của tôi
      </a>
      <span class="text-white">{{course.title}}</span>
    </div>
  </nav>

  <div class="learn-container">
    <div class="video-section">
      <div class="video-player-wrapper">
        <video id="videoPlayer" controls>
          <source src="{{currentLecture.video_url}}" type="video/mp4">
        </video>
      </div>

      <div class="video-controls">
        <h4 class="lecture-title">{{currentLecture.title}}</h4>
        <div class="lecture-meta">
          Bài {{currentLectureIndex}} / {{totalLectures}} • {{course.category.name}}
        </div>

        <ul class="nav nav-tabs video-tabs mt-3" role="tablist">
          <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#overview">Tổng quan</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#notes">Ghi chú của tôi</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#resources">Tài nguyên</button>
          </li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane fade show active" id="overview">
            <p>{{currentLecture.description}}</p>
          </div>

          <div class="tab-pane fade" id="notes">
            <div class="mb-3">
              <button class="btn btn-sm btn-primary" onclick="addNote()">
                <i class="bi bi-plus-lg"></i> Thêm ghi chú
              </button>
            </div>
            <div id="notesList">
              {{#each notes}}
              <div class="note-item">
                <div class="note-time">{{time}}</div>
                <div>{{content}}</div>
              </div>
              {{/each}}
            </div>
          </div>

          <div class="tab-pane fade" id="resources">
            {{#if currentLecture.resources}}
            <ul class="list-unstyled">
              {{#each currentLecture.resources}}
              <li class="mb-2">
                <a href="{{url}}" class="text-primary" download>
                  <i class="bi bi-download"></i> {{title}}
                </a>
              </li>
              {{/each}}
            </ul>
            {{else}}
            <p class="text-muted">Bài giảng này chưa có tài nguyên đính kèm</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <div class="curriculum-sidebar">
      <div class="sidebar-header">
        <h5>Nội dung khóa học</h5>
      </div>

      <div class="course-progress-sidebar">
        <div class="progress-text">Hoàn thành: {{completedLectures}}/{{totalLectures}}</div>
        <div class="progress">
          <div class="progress-bar bg-success" style="width: {{progress}}%"></div>
        </div>
      </div>

      <ul class="section-list">
        {{#each course.sections}}
        <li class="section-item">
          <button class="section-header-btn" data-bs-toggle="collapse" data-bs-target="#section-{{@index}}">
            <span>{{title}}</span>
            <i class="bi bi-chevron-down"></i>
          </button>
          <div class="collapse show section-lectures" id="section-{{@index}}">
            {{#each lectures}}
            <div class="lecture-list-item {{#if (eq id ../currentLecture.id)}}active{{/if}} {{#if is_completed}}completed{{/if}}"
                 onclick="goToLecture('{{id}}')">
              <div class="lecture-checkbox {{#if is_completed}}checked{{/if}}">
                {{#if is_completed}}
                <i class="bi bi-check text-white"></i>
                {{/if}}
              </div>
              <div class="flex-grow-1">
                <div>{{title}}</div>
                <small class="text-muted">{{duration}}</small>
              </div>
            </div>
            {{/each}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>
  <script>
    const player = new Plyr('#videoPlayer', {
      controls: ['play-large', 'play', 'progress', 'current-time', 'mute', 'volume', 'settings', 'fullscreen'],
      settings: ['quality', 'speed'],
      speed: { selected: 1, options: [0.5, 0.75, 1, 1.25, 1.5, 2] }
    });

    player.on('ended', () => {
      markLectureComplete();
    });

    player.on('timeupdate', () => {
      const currentTime = player.currentTime;
      const duration = player.duration;
      const progress = (currentTime / duration) * 100;

      if (progress > 90 && !player.hasMarkedComplete) {
        markLectureComplete();
        player.hasMarkedComplete = true;
      }
    });

    function markLectureComplete() {
      console.log('Marking lecture as complete');
    }

    function goToLecture(lectureId) {
      window.location.href = `/learn/{{course.id}}?lecture=${lectureId}`;
    }

    function addNote() {
      const currentTime = player.currentTime;
      const minutes = Math.floor(currentTime / 60);
      const seconds = Math.floor(currentTime % 60);
      const timeStr = `${minutes}:${seconds.toString().padStart(2, '0')}`;

      const note = prompt('Nhập ghi chú của bạn:');
      if (note) {
        alert(`Ghi chú tại ${timeStr}: ${note}\nChức năng lưu ghi chú đang được phát triển`);
      }
    }
  </script>
</body>
</html>
