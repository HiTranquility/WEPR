{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/student/main.css">
{{/fill_section}}

<div class="container py-5">
  <div class="welcome-section mb-5">
    <h1>Xin chào, {{user.full_name}}!</h1>
    <p class="text-muted">Sẵn sàng tiếp tục học tập ngày hôm nay?</p>
  </div>

  <div class="row g-4 mb-5">
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{stats.enrolled_courses}}</h3>
        <p>Khóa học đang học</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{stats.completed_courses}}</h3>
        <p>Đã hoàn thành</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{stats.certificates}}</h3>
        <p>Chứng chỉ</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{stats.total_learning_hours}}</h3>
        <p>Giờ học</p>
      </div>
    </div>
  </div>

  <div class="mb-5">
    <h3 class="mb-4">Tiếp tục học</h3>
    <div class="row g-4">
      {{#each recentCourses}}
      <div class="col-md-6">
        <div class="card learning-card">
          <div class="row g-0">
            <div class="col-4">
              <img src="{{thumbnail_url}}" class="img-fluid rounded-start" alt="{{title}}">
            </div>
            <div class="col-8">
              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="text-muted small">{{teacher.full_name}}</p>
                <div class="progress mb-2" style="height: 8px;">
                  <div class="progress-bar" role="progressbar" style="width: {{progress}}%"></div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted small">{{progress}}% hoàn thành</span>
                  <a href="/learn/{{id}}" class="btn btn-primary btn-sm">Tiếp tục</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <div>
    <h3 class="mb-4">Khóa học đề xuất</h3>
    <div class="row g-4">
      {{#each recommendedCourses}}
      {{> card/small-course-card}}
      {{/each}}
    </div>
  </div>
</div>