{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/student/student-dashboard.css">
{{/fill_section}}

<div class="container py-5">
  {{> dashboard
  title="Student Dashboard"
  message="Sẵn sàng tiếp tục học tập ngày hôm nay?"
  }}

  <div class="mb-5">
    <h3 class="mb-4">Tiếp tục học</h3>
    {{#if recentCourses.length}}
    <div class="row g-4">
      {{#each recentCourses}}
      <div class="col-md-6">
        <div class="card learning-card">
          <div class="row g-0">
            <div class="col-4">
              <img src="{{thumbnail_url}}" class="img-fluid rounded-start" alt="{{title}}">
            </div>
            <div class="col-8">
              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="text-muted small">{{teacher.full_name}}</p>
                <div class="progress mb-2" style="height: 8px;">
                  <div class="progress-bar" role="progressbar" style="width: {{progress}}%"></div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted small">{{progress}}% hoàn thành</span>
                  <a href="/student/learn/{{id}}" class="btn btn-primary btn-sm">
                    {{#if (eq progress 0)}}Bắt đầu{{else}}Tiếp tục{{/if}}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center py-5 bg-light rounded">
      <i class="bi bi-journal-bookmark fs-1 text-primary"></i>
      <h5 class="mt-3">Bạn chưa có khóa học nào</h5>
      <p class="text-muted">Khám phá các khóa học nổi bật dưới đây và bắt đầu học ngay.</p>
      <a href="/courses" class="btn btn-outline-primary">Khám phá khóa học</a>
    </div>
    {{/if}}
  </div>

  <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="card-title mb-0">Khóa học gần đây</h4>
              <a href="/student/my-courses" class="text-decoration-none">Xem tất cả</a>
            </div>
            {{#if enrolledCourses.length}}
            <div class="recent-course-list">
              {{#each enrolledCourses}}
              <div class="recent-course-item">
                <img src="{{thumbnail_url}}" alt="{{title}}">
                <div class="recent-course-info">
                  <h5>{{title}}</h5>
                  <p class="text-muted mb-1">{{teacher.full_name}}</p>
                  <div class="recent-meta">
                    <span><i class="bi bi-calendar3"></i> {{formatDate enrolled_at}}</span>
                    <span><i class="bi bi-bar-chart"></i> {{progress}}% tiến độ</span>
                  </div>
                </div>
                <a href="/student/learn/{{id}}" class="btn btn-outline-primary btn-sm">
                  {{#if (eq progress 0)}}Bắt đầu{{else}}Tiếp tục{{/if}}
                </a>
              </div>
              {{/each}}
            </div>
            {{else}}
            <div class="empty-state text-center">
              <i class="bi bi-book"></i>
              <h5>Bạn chưa tham gia khóa học nào</h5>
              <p class="text-muted">Khám phá các khóa học nổi bật và bắt đầu hành trình học tập của bạn.</p>
              <a href="/courses" class="btn btn-primary">Khám phá ngay</a>
            </div>
            {{/if}}
          </div>
        </div>

  <div class="mt-5" id="wishlist-section">
    <h3 class="mb-4">Danh sách yêu thích</h3>
    {{#if watchlist.length}}
    <div class="row g-4">
      {{#each watchlist}}
      <div class="col-lg-4 col-md-6">
        <div class="card wishlist-card">
          <img src="{{course.thumbnail_url}}" class="card-img-top" alt="{{course.title}}">
          <div class="card-body">
            <span class="badge bg-primary mb-2">{{course.category.name}}</span>
            <h5 class="card-title">{{course.title}}</h5>
            <p class="text-muted small mb-2">{{course.teacher.full_name}}</p>
            <div class="d-flex gap-3 text-muted small mb-3">
              <span>⭐ {{course.rating_avg}}</span>
              <span>{{formatNumber course.rating_count}} đánh giá</span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <strong class="text-primary">{{formatCurrency course.discount_price}}</strong>
              <button class="btn btn-outline-danger btn-sm" data-course-id="{{course.id}}" data-fav-id="{{id}}" onclick="removeWishlistDashboard('{{course.id}}')">
                <i class="bi bi-trash"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center py-4 bg-light rounded">
      <i class="bi bi-heart fs-1 text-danger"></i>
      <h5 class="mt-3">Chưa có khóa học yêu thích</h5>
      <p class="text-muted">Thêm khóa học bạn quan tâm để theo dõi nhanh tại đây.</p>
      <a href="/courses" class="btn btn-outline-primary">Khám phá khóa học</a>
    </div>
    {{/if}}
  </div>
</div>

{{#fill_section 'js'}}
<script type="module">
  wishlistBtn?.addEventListener('click', async () => {
    try {
      const res = await fetch('/student/wishlist', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include'
      });
      const data = await handleResponse(res);
      if (!data) return;
      window.location.reload();
    } catch (err) {
      alert('Có lỗi xảy ra.');
    }
  });

  window.removeWishlistDashboard = async (courseId) => {
    if (!confirm('Bạn có chắc muốn xóa khóa học này khỏi danh sách yêu thích?')) {
      return;
    }
    try {
      const res = await fetch(`/courses/${courseId}/wishlist`, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include'
      });
      const data = await handleResponse(res);
      if (!data) return;
      window.location.reload();
    } catch (err) {
      alert('Có lỗi xảy ra.');
    }
  }
</script>
{{/fill_section}}