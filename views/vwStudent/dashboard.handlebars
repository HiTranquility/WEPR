{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/student/main.css">
{{/fill_section}}

<div class="container py-5">
  {{> dashboard
  title="Student Dashboard"
  message="Sẵn sàng tiếp tục học tập ngày hôm nay?"
  }}

  <div class="mb-5">
    <h3 class="mb-4">Tiếp tục học</h3>
    <div class="row g-4">
      {{#each recentCourses}}
      <div class="col-md-6">
        <div class="card learning-card">
          <div class="row g-0">
            <div class="col-4">
              <img src="{{thumbnail_url}}" class="img-fluid rounded-start" alt="{{title}}">
            </div>
            <div class="col-8">
              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="text-muted small">{{teacher.full_name}}</p>
                <div class="progress mb-2" style="height: 8px;">
                  <div class="progress-bar" role="progressbar" style="width: {{progress}}%"></div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted small">{{progress}}% hoàn thành</span>
                  <a href="/learn/{{id}}" class="btn btn-primary btn-sm">Tiếp tục</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  {{> recommend-course-section
  title="Các khóa học khác cùng lĩnh vực"
  courses=recommendedCourses
  }}

</div>