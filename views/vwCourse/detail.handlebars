{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/course/course-detail.css">
{{/fill_section}}

<section class="course-hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="mb-3">
          <span class="badge bg-primary">{{course.category.name}}</span>
        </div>
        <h1 class="course-title">{{course.title}}</h1>
        <p class="course-subtitle">{{course.short_description}}</p>

        <div class="course-meta">
          <div class="course-meta-item">
            <i class="bi bi-star-fill text-warning"></i>
            <strong>{{course.rating_avg}}</strong>
            <span>({{formatNumber course.rating_count}} đánh giá)</span>
          </div>
          <div class="course-meta-item">
            <i class="bi bi-people-fill"></i>
            <span>{{formatNumber course.enrollment_count}} học viên</span>
          </div>
          <div class="course-meta-item">
            <i class="bi bi-clock"></i>
            <span>Cập nhật {{formatDate course.updated_at}}</span>
          </div>
        </div>

        <div class="d-flex align-items-center gap-3 mb-3">
          <span>Giảng viên:</span>
          <div class="d-flex align-items-center gap-2">
            <img src="{{course.teacher.avatar_url}}" class="teacher-avatar" alt="{{course.teacher.full_name}}">
            <strong>{{course.teacher.full_name}}</strong>
          </div>
        </div>

        {{#if course.preview_lecture}}
        <div class="mb-4">
          <a class="btn btn-outline-light" href="/courses/{{course.id}}/preview/lecture/{{course.preview_lecture.id}}" target="_blank">
            <i class="bi bi-play-circle"></i> Xem thử bài giảng
          </a>
        </div>
        {{/if}}
      </div>

      <div class="col-lg-4">
        <img src="{{course.thumbnail_url}}" class="course-thumbnail" alt="{{course.title}}">
      </div>
    </div>
  </div>
</section>

<section class="course-content">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <ul class="nav nav-tabs content-tabs" role="tablist">
          <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#overview">Tổng quan</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#curriculum">Nội dung khóa học</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#instructor">Giảng viên</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews">Đánh giá</button>
          </li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane fade show active" id="overview">
            <div class="description-content">
              <h3>Mô tả khóa học</h3>
              {{{course.full_description}}}
            </div>
          </div>

          <div class="tab-pane fade" id="curriculum">
            <h3 class="mb-4">Nội dung khóa học</h3>
            <p class="text-muted mb-4">{{course.sections.length}} chương • {{course.total_lectures}} bài giảng • {{course.total_duration}}</p>

            {{#each course.sections}}
            <div class="curriculum-section">
              <div class="section-header" data-bs-toggle="collapse" data-bs-target="#section-{{@index}}">
                <div>
                  <h5 class="section-title">{{title}}</h5>
                  <p class="section-meta mb-0">{{lectures.length}} bài giảng • {{duration}}</p>
                </div>
                <i class="bi bi-chevron-down"></i>
              </div>
              <div class="collapse section-content" id="section-{{@index}}">
                {{#each lectures}}
                <div class="lecture-item">
                  <div class="lecture-info">
                    <i class="bi bi-play-circle lecture-icon"></i>
                    <span>{{title}}</span>
                    {{#if is_preview}}
                    <a class="preview-badge" href="/courses/{{../../course.id}}/preview/lecture/{{id}}" target="_blank">Xem trước</a>
                    {{/if}}
                  </div>
                    <span class="text-muted">{{duration_text}}</span>
                </div>
                {{/each}}
              </div>
            </div>
            {{/each}}
          </div>

          <div class="tab-pane fade" id="instructor">
            <div class="instructor-card">
              <img src="{{course.teacher.avatar_url}}" class="instructor-avatar" alt="{{course.teacher.full_name}}">
              <div class="instructor-info">
                <h3>{{course.teacher.full_name}}</h3>
                <p class="text-muted">{{course.teacher.bio}}</p>
                <div class="instructor-stats">
                  <div class="stat-item">
                    <i class="bi bi-star-fill"></i>
                    <span>{{course.teacher.rating_avg}} xếp hạng giảng viên</span>
                  </div>
                  <div class="stat-item">
                    <i class="bi bi-people-fill"></i>
                    <span>{{formatNumber course.teacher.total_students}} học viên</span>
                  </div>
                  <div class="stat-item">
                    <i class="bi bi-book"></i>
                    <span>{{course.teacher.total_courses}} khóa học</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="tab-pane fade" id="reviews">
            <h3 class="mb-4">Đánh giá từ học viên</h3>

            <!-- Summary box -->
            <div class="rating-summary p-3 mb-4 bg-light d-flex align-items-center">
              <div style="font-size:48px; font-weight:700; color:#f6b300; width:120px; text-align:center;">{{course.rating_avg}}</div>
              <div>
                <div class="d-flex align-items-center">
                  <div class="me-3">{{#loopTimes course.rating_avg}}<i class="bi bi-star-fill text-warning"></i>{{/loopTimes}}</div>
                  <div class="text-muted">Đánh giá trung bình ({{course.rating_count}} lượt)</div>
                </div>
              </div>
            </div>

            <!-- Review form (only for enrolled users who haven't reviewed yet) -->
            {{#if isEnrolled}}
              {{#unless userReview}}
              <div class="card mb-4 p-3">
                <h5>Viết đánh giá của bạn</h5>
                <form id="reviewForm" data-course-id="{{course.id}}">
                  <div class="mb-2">
                    <label class="form-label">Đánh giá</label>
                    <div id="starPicker" class="mb-2">
                      <button type="button" class="btn btn-sm btn-outline-secondary star-btn" data-value="1"><i class="bi bi-star-fill"></i></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary star-btn" data-value="2"><i class="bi bi-star-fill"></i></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary star-btn" data-value="3"><i class="bi bi-star-fill"></i></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary star-btn" data-value="4"><i class="bi bi-star-fill"></i></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary star-btn" data-value="5"><i class="bi bi-star-fill"></i></button>
                    </div>
                    <input type="hidden" name="rating" id="reviewRating" value="5">
                  </div>
                  <div class="mb-2">
                    <label class="form-label">Nhận xét</label>
                    <textarea name="comment" id="reviewComment" class="form-control" rows="3" placeholder="Viết nhận xét..."></textarea>
                  </div>
                  <div>
                    <button class="btn btn-primary" type="submit">Gửi đánh giá</button>
                  </div>
                </form>
              </div>
              {{/unless}}
            {{/if}}

            <div class="reviews-list" id="reviewsList">
              {{#each reviews}}
              <div class="review-item mb-3">
                <div class="review-header d-flex align-items-start">
                  <img src="{{student.avatar_url}}" class="review-avatar rounded-circle me-3" alt="{{student.full_name}}" style="width:48px;height:48px;">
                  <div style="flex:1;">
                    <div class="d-flex align-items-center">
                      <div class="review-author fw-bold">{{student.full_name}}</div>
                      <div class="ms-auto text-muted">{{formatDate created_at}}</div>
                    </div>
                    <div class="review-rating text-warning mt-1">{{#loopTimes rating}}<i class="bi bi-star-fill"></i>{{/loopTimes}}</div>
                    <div class="review-content mt-2">{{content}}</div>
                  </div>
                </div>
              </div>
              <hr />
              {{/each}}
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="sidebar-sticky">
          <div class="price-section">
            <div class="d-flex align-items-center mb-3">
              <span class="price-current">{{formatCurrency course.discount_price}}</span>
              {{#if (gt course.price course.discount_price)}}
              <span class="price-original ms-3">{{formatCurrency course.price}}</span>
              <span class="discount-tag">-{{calculateDiscount course.price course.discount_price}}%</span>
              {{/if}}
            </div>

            <div class="action-buttons">
              <button class="btn btn-enroll w-100" id="enrollBtn" data-course-id="{{course.id}}">Đăng ký học</button>
              <button class="btn btn-wishlist w-100" id="wishlistBtn" data-course-id="{{course.id}}">
                <i class="bi bi-heart"></i> Thêm vào yêu thích
              </button>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <h6 class="fw-bold mb-3">Khóa học này bao gồm:</h6>
              <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-play-circle text-primary"></i> {{course.total_duration}} video</li>
                <li class="mb-2"><i class="bi bi-file-earmark-text text-primary"></i> {{course.total_resources}} tài nguyên</li>
                <li class="mb-2"><i class="bi bi-phone text-primary"></i> Truy cập trên điện thoại và TV</li>
                <li class="mb-2"><i class="bi bi-infinity text-primary"></i> Truy cập không giới hạn</li>
                <li class="mb-2"><i class="bi bi-award text-primary"></i> Chứng chỉ hoàn thành</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="related-courses">
  <div class="container">
    <h3 class="mb-4">Các khóa học khác cùng lĩnh vực</h3>
    <div class="row g-4">
      {{#each relatedCourses}}
      <div class="col-lg-3 col-md-4 col-sm-6">
        <a href="/courses/{{id}}" class="card course-card text-decoration-none">
          <div class="position-relative">
            <img src="{{thumbnail_url}}" class="course-image" alt="{{title}}">
          </div>
          <div class="course-body">
            <div class="course-category">{{category.name}}</div>
            <h5 class="course-title">{{truncate title 60}}</h5>
            <div class="course-teacher">
              <img src="{{teacher.avatar_url}}" class="teacher-avatar" alt="{{teacher.full_name}}">
              {{teacher.full_name}}
            </div>
            <div class="course-rating">
              <span class="rating-stars">⭐ {{rating_avg}}</span>
              <span class="rating-text">({{formatNumber rating_count}})</span>
            </div>
            <div class="course-footer">
              <div class="course-price">
                <span class="price-current">{{formatCurrency discount_price}}</span>
              </div>
            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{#fill_section 'js'}}
<script type="module">
  const enrollBtn = document.getElementById('enrollBtn');
  const wishlistBtn = document.getElementById('wishlistBtn');

  async function handleResponse(res) {
    if (res.status === 401) {
      window.location.href = '/signin';
      return null;
    }
    let data = null;
    try {
      data = await res.json();
    } catch (_) {}
    if (!res.ok) {
      const message = data?.message || 'Có lỗi xảy ra.';
      alert(message);
      return null;
    }
    return data;
  }

  enrollBtn?.addEventListener('click', async () => {
    const res = await fetch(`/courses/{{course.id}}/enroll`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      credentials: 'include'
    });
    const data = await handleResponse(res);
    if (!data) return;
    alert(data.message || 'Đăng ký khóa học thành công!');
  });

  wishlistBtn?.addEventListener('click', async () => {
    const res = await fetch(`/courses/{{course.id}}/wishlist`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      credentials: 'include'
    });
    const data = await handleResponse(res);
    if (!data) return;
    alert(data.message || 'Đã thêm vào danh sách yêu thích!');
    wishlistBtn.classList.add('active');
    wishlistBtn.innerHTML = '<i class="bi bi-heart-fill"></i> Đã thêm vào yêu thích';
  });

  // Review form handling
  const reviewForm = document.getElementById('reviewForm');
  if (reviewForm) {
    const starBtns = document.querySelectorAll('#starPicker .star-btn');
    let selected = 5;
    starBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        selected = Number(btn.getAttribute('data-value'));
        document.getElementById('reviewRating').value = selected;
        // highlight icons
        starBtns.forEach(b => {
          const ic = b.querySelector('i');
          if (!ic) return;
          const val = Number(b.getAttribute('data-value'));
          ic.classList.toggle('text-warning', val <= selected);
        });
      });
    });

    reviewForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const courseId = reviewForm.getAttribute('data-course-id');
      const rating = Number(document.getElementById('reviewRating').value) || 5;
      const comment = document.getElementById('reviewComment').value || '';

      const res = await fetch(`/courses/${courseId}/reviews`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ rating, comment })
      });
      if (res.status === 401) return window.location.href = '/signin';
      const data = await res.json();
      if (!res.ok) { alert(data?.message || 'Lỗi khi gửi đánh giá'); return; }

      // Prepend new review into list
      const r = data.review;
      const reviewsList = document.getElementById('reviewsList');
      const div = document.createElement('div');
      div.className = 'review-item mb-3';
      div.innerHTML = `
        <div class="review-header d-flex align-items-start">
          <img src="${r.student.avatar_url || ''}" class="review-avatar rounded-circle me-3" style="width:48px;height:48px;" />
          <div style="flex:1;">
            <div class="d-flex align-items-center">
              <div class="review-author fw-bold">${r.student.full_name}</div>
              <div class="ms-auto text-muted">bây giờ</div>
            </div>
                    <div class="review-rating text-warning mt-1">${'<i class="bi bi-star-fill"></i>'.repeat(r.rating)}</div>
            <div class="review-content mt-2">${(r.content || '').replace(/</g, '&lt;')}</div>
          </div>
        </div>
        <hr />
      `;
      if (reviewsList) reviewsList.prepend(div);

      // update rating summary numbers on page
      if (typeof data.rating_avg !== 'undefined') {
        // update numeric value and count (simple DOM find)
        document.querySelectorAll('.rating-summary')[0].querySelector('div').textContent = Number(data.rating_avg).toFixed(1);
      }

      // hide form after submit
      reviewForm.style.display = 'none';
    });
  }
</script>
{{/fill_section}}
