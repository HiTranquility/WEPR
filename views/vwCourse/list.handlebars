<style>
/* Pagination styles to match Udemy-like look (compact, circular prev/next, underline current) */
.pagination-nav { --pill-size: 42px; }
.pagination-nav .pagination { gap: 18px; align-items: center; display: flex; justify-content: center; }
.pagination-nav .page-item { list-style: none; }
.pagination-nav .page-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32px;
  height: 32px;
  padding: 4px 10px;
  border-radius: 6px;
  color: #5b2dd3; /* purple */
  text-decoration: none;
  font-weight: 600;
}
.pagination-nav .page-item.active .page-link {
  color: #4a148c;
  position: relative;
}
.pagination-nav .page-item.active .page-link::after {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -6px;
  width: 22px;
  height: 3px;
  background: #4a148c;
  border-radius: 2px;
}
.pagination-nav .page-item.disabled .page-link { opacity: 0.35; pointer-events: none; }
.pagination-nav .page-item .page-link.small-circle {
  width: var(--pill-size);
  height: var(--pill-size);
  min-width: var(--pill-size);
  border-radius: 50%;
  border: 2px solid rgba(91,45,211,0.12);
  background: white;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}
.pagination-nav .page-item .page-link.ellipsis {
  pointer-events: none;
  background: transparent;
  border: none;
  color: #666;
}
</style>
