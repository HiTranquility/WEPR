{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/teacher-edit-course.css">
{{/fill_section}}

<div class="container py-4 teacher-form-page">
  <h2 class="mb-4">Chỉnh sửa khóa học</h2>
  <div class="row">
    <div class="col-lg-8">
      <form id="editCourseForm" class="teacher-form-card">
        <input type="hidden" id="courseId" value="{{course.id}}">
        <div class="mb-3">
          <label class="form-label">Tiêu đề khóa học *</label>
          <input type="text" class="form-control" id="title" value="{{course.title}}" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Lĩnh vực *</label>
          <select class="form-select" id="category_id" required>
            {{#each categories}}
            <option value="{{id}}" {{#if (eq id ../course.category_id)}}selected{{/if}}>{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">Mô tả ngắn *</label>
          <textarea class="form-control" id="short_description" rows="2" required>{{course.short_description}}</textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Mô tả chi tiết</label>
          <textarea class="form-control" id="detailed_description" rows="6">{{course.detailed_description}}</textarea>
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Giá gốc (VND)</label>
            <input type="number" class="form-control" id="price" value="{{course.price}}" min="0" step="1000">
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label">Giá khuyến mại (VND)</label>
            <input type="number" class="form-control" id="discount_price" value="{{course.discount_price}}" min="0" step="1000">
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label">URL ảnh thumbnail</label>
          <input type="url" class="form-control" id="thumbnail_url" value="{{course.thumbnail_url}}" placeholder="https://example.com/image.jpg">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật khóa học</button>
        <a href="/teacher/courses" class="btn btn-secondary">Hủy</a>
      </form>
    </div>
  </div>
</div>

{{#fill_section 'js'}}
<script>
document.getElementById('editCourseForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  
  const formData = {
    title: document.getElementById('title').value.trim(),
    category_id: document.getElementById('category_id').value,
    short_description: document.getElementById('short_description').value.trim(),
    detailed_description: document.getElementById('detailed_description').value.trim(),
    price: parseFloat(document.getElementById('price').value) || 0,
    discount_price: document.getElementById('discount_price').value ? parseFloat(document.getElementById('discount_price').value) : null,
    thumbnail_url: document.getElementById('thumbnail_url').value.trim()
  };

  if (!formData.title || !formData.short_description) {
    alert('Vui lòng nhập đầy đủ thông tin bắt buộc!');
    return;
  }

  const courseId = document.getElementById('courseId').value;
  
  try {
    const res = await fetch(`/teacher/course/${courseId}`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(formData)
    });

    const data = await res.json();
    if (data.success) {
      alert('Cập nhật khóa học thành công!');
      window.location.href = '/teacher/courses';
    } else {
      alert(data.message || 'Có lỗi xảy ra!');
    }
  } catch (err) {
    console.error('Error:', err);
    alert('Có lỗi xảy ra khi cập nhật khóa học!');
  }
});
</script>
{{/fill_section}}
