{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/main.css">
{{/fill_section}}

<div class="container py-5">
  <h1 class="mb-4">Dashboard Giảng viên</h1>
  <div class="row g-4">
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{stats.total_courses}}</h3>
        <p>Tổng khóa học</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{formatNumber stats.total_students}}</h3>
        <p>Tổng học viên</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{stats.avg_rating}}</h3>
        <p>Đánh giá TB</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <h3>{{formatCurrency stats.total_revenue}}</h3>
        <p>Doanh thu</p>
      </div>
    </div>
  </div>
  <div class="mt-5">
    <h3>Khóa học gần đây</h3>
    <div class="row g-4">
      {{#each recentCourses}}
      <div class="col-md-4">
        <div class="card">
          <img src="{{thumbnail_url}}" class="card-img-top" alt="{{title}}">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p>Học viên: {{formatNumber enrollment_count}}</p>
            <p>Đánh giá: {{rating_avg}} ⭐</p>
            <a href="/teacher/course/{{id}}" class="btn btn-primary btn-sm">Xem chi tiết</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
