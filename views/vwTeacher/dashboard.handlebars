{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/teacher-dashboard.css">
{{/fill_section}}

<div class="container py-5">
  {{> dashboard
    title="Teacher Dashboard"
    message="Sẵn sàng tiếp tục dạy học ngày hôm nay?"
  }}

  <div class="mt-5">
    <h3>Khóa học gần đây</h3>
    <div class="row g-4">
      {{#each recentCourses}}
      <div class="col-md-4">
        <div class="card">
          <img src="{{thumbnail_url}}" class="card-img-top" alt="{{title}}">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p>Học viên: {{formatNumber enrollment_count}}</p>
            <p>Đánh giá: {{rating_avg}} ⭐</p>
            <a href="/teacher/course/{{id}}" class="btn btn-primary btn-sm">Xem chi tiết</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
