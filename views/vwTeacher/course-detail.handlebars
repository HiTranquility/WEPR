{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/main.css">
{{/fill_section}}

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>{{course.title}}</h2>
    <div class="btn-group">
      <a href="/teacher/course/{{course.id}}/edit" class="btn btn-outline-primary">Chỉnh sửa</a>
      <a href="/teacher/course/{{course.id}}/content" class="btn btn-outline-secondary">Quản lý nội dung</a>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="stat-card">
        <h3>{{formatNumber course.enrollment_count}}</h3>
        <p>Học viên đăng ký</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="stat-card">
        <h3>{{course.rating_avg}} ⭐</h3>
        <p>Đánh giá trung bình</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="stat-card">
        <h3>{{formatCurrency course.revenue}}</h3>
        <p>Doanh thu</p>
      </div>
    </div>
  </div>
</div>
