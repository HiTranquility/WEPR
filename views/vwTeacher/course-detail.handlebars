{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/teacher-course-detail.css">
{{/fill_section}}

<div class="container py-4 teacher-course-detail-page">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>{{course.title}}</h2>
    <div class="btn-group">
      <a href="/teacher/course/{{course.id}}/manage" class="btn btn-outline-primary">
        <i class="bi bi-speedometer"></i> Quản lý
      </a>
      <a href="/teacher/course/{{course.id}}/edit" class="btn btn-outline-info">
        <i class="bi bi-pencil"></i> Chỉnh sửa
      </a>
      <a href="/teacher/course/{{course.id}}/content" class="btn btn-outline-success">
        <i class="bi bi-list-ul"></i> Nội dung
      </a>
      <a href="/courses/{{course.id}}" class="btn btn-outline-secondary" target="_blank">
        <i class="bi bi-eye"></i> Xem
      </a>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="stat-card">
        <h3>{{formatNumber course.enrollment_count}}</h3>
        <p>Học viên đăng ký</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="stat-card">
        <h3>{{course.rating_avg}} ⭐</h3>
        <p>Đánh giá trung bình</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="stat-card">
        <h3>{{formatCurrency course.revenue}}</h3>
        <p>Doanh thu</p>
      </div>
    </div>
  </div>
</div>
