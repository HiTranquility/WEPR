{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/teacher-manage-content.css">
{{/fill_section}}

<div class="container py-4 teacher-manage-content-page">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý nội dung: {{course.title}}</h2>
    <a href="/teacher/course/{{course.id}}/section/create" class="btn btn-primary">
      <i class="bi bi-plus"></i> Thêm chương mới
    </a>
  </div>

  <div class="content-list">
    {{#each course.sections}}
    <div class="section-item card mb-3">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{title}}</h5>
        <div class="btn-group btn-group-sm">
          <a href="/teacher/course/{{../course.id}}/section/{{id}}/lecture/create" class="btn btn-outline-primary">
            Thêm bài giảng
          </a>
          <button class="btn btn-outline-danger">Xóa</button>
        </div>
      </div>
      <div class="card-body">
        {{#each lectures}}
        <div class="lecture-item d-flex justify-content-between align-items-center py-2">
          <div>
            <i class="bi bi-play-circle"></i> {{title}}
            <span class="text-muted ms-2">({{duration}})</span>
          </div>
          <div class="btn-group btn-group-sm">
            <a href="/teacher/course/{{../../course.id}}/content/{{id}}/edit" class="btn btn-outline-primary">Sửa</a>
            <button class="btn btn-outline-danger">Xóa</button>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/each}}
  </div>
</div>
