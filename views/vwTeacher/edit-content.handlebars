{{#fill_section 'css'}}
<link rel="stylesheet" href="/statics/css/teacher/main.css">
{{/fill_section}}

<div class="container py-4">
  <h2 class="mb-4">Chỉnh sửa nội dung</h2>
  <div class="row">
    <div class="col-lg-8">
      <form id="contentForm">
        <div class="mb-3">
          <label class="form-label">Tiêu đề</label>
          <input type="text" class="form-control" value="{{content.title}}" required>
        </div>
        <div class="mb-3">
          <label class="form-label">URL Video</label>
          <input type="url" class="form-control" value="{{content.video_url}}">
        </div>
        <div class="mb-3">
          <label class="form-label">Mô tả</label>
          <textarea class="form-control" rows="4">{{content.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="/teacher/course/{{courseId}}/content" class="btn btn-secondary">Hủy</a>
      </form>
    </div>
  </div>
</div>
